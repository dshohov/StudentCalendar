@using Models
@model Event

<div class="row g-5">
    <div class="col-md-7 col-lg-8">
        <h4 class="mb-3">Create Event</h4>
        <form asp-controller="Event" asp-action="CreateEvent" method="post" class="needs-validation" novalidate="">
            <div class="row g-3">
                <div class="col-sm-6">
                    <label asp-for="Name" class="form-label">Name Event</label>
                    <input asp-for="Name" type="text" class="form-control" id="Name" placeholder="" value="" required="">
                    <div class="invalid-feedback">
                        Valid first name is required.
                    </div>
                </div>

                <div class="col-sm-6">
                    <label asp-for="Description" for="Description" class="form-label">Description</label>
                    <input asp-for="Description" type="text" class="form-control" id="Description" placeholder="" value="" required="">
                    <div class="invalid-feedback">
                        Valid last name is required.
                    </div>
                </div>
                <div class="col-sm-6">
                    <label asp-for="Location" for="Location" class="form-label">Location</label>
                    <input asp-for="Location" type="text" class="form-control" id="Location" placeholder="" value="" required="">
                    <div class="invalid-feedback">
                        Valid last name is required.
                    </div>
                </div>
                <div class="col-sm-6">
                    <label asp-for="DateTime" for="DateTime" class="form-label">DateTime</label>
                    <input asp-for="DateTime" type="datetime-local" class="form-control" id="DateTime" placeholder="" value="" required="">
                    <div class="invalid-feedback">
                        Valid last name is required.
                    </div>
                </div>                

                <hr class="my-4">

                <button class="w-100 btn btn-primary btn-lg" type="submit">Create Event</button>
            </div>
        </form>
    </div>
</div>

