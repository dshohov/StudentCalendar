@using Models
@model Group

<div class="row g-5">
    <div class="col-md-7 col-lg-8">
        <h4 class="mb-3">Create Group</h4>
        <form asp-controller="Group" asp-action="CreateGroup" method="post" class="needs-validation" novalidate="">
            <div class="row g-3">
                <div class="col-sm-6">
                    <label asp-for="Name" class="form-label">Name Group</label>
                    <input asp-for="Name" type="text" class="form-control" id="Name" placeholder="" value="" required="">
                    <div class="invalid-feedback">
                        Valid first name is required.
                    </div>
                </div>

                <hr class="my-4">

                <button class="w-100 btn btn-primary btn-lg" type="submit">Create Group</button>
            </div>
        </form>
    </div>
</div>