@using StudentCalendarAdmin.ViewModels
@model RegisterViewModel

<div class="row g-5">
    <div class="col-md-7 col-lg-8">
        <h4 class="mb-3">Register</h4>
        <form asp-controller="Account" asp-action="Register" method="post" class="needs-validation" novalidate="">
            <div class="row g-3">
                <div class="col-sm-6">
                    <label asp-for="FirstName" class="form-label">First name</label>
                    <input asp-for="FirstName" type="text" class="form-control" id="firstName" placeholder="" value="" required="">
                    <div class="invalid-feedback">
                        Valid first name is required.
                    </div>
                </div>

                <div class="col-sm-6">
                    <label asp-for="LastName" for="lastName" class="form-label">Last name</label>
                    <input asp-for="LastName" type="text" class="form-control" id="lastName" placeholder="" value="" required="">
                    <div class="invalid-feedback">
                        Valid last name is required.
                    </div>
                </div>

                <div class="col-12">
                    <label asp-for="Email" class="form-label">Email <span class="text-body-secondary">(Optional)</span></label>
                    <input type="email" asp-for="Email" class="form-control" id="email" placeholder="you@example.com">
                    <div class="invalid-feedback">
                        Please enter a valid email address for shipping updates.
                    </div>
                </div>               

                <hr class="my-4">

                <div class="col-12">
                    <label asp-for="Password" for="lastName" class="form-label">Password</label>
                    <input asp-for="Password" type="password" class="form-control" id="Password" placeholder="" value="" required="">
                    <div class="invalid-feedback">
                        Valid last name is required.
                    </div>
                </div>
                <div class="col-12">
                    <label asp-for="ConfirmPassword" for="lastName" class="form-label">Confirm Password</label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" id="ConfirmPassword" placeholder="" value="" required="">
                    <div class="invalid-feedback">
                        Valid last name is required.
                    </div>
                </div>

                <hr class="my-4">

                <button class="w-100 btn btn-primary btn-lg" type="submit">Continue to checkout</button>
            </div>
        </form>
    </div>
</div>
