@using StudentCalendarAdmin.ViewModels;
@model LessonEditViewModel

<h1 class="text-info">Edit Lesson</h1>
<form asp-controller="Lesson" asp-action="EditLesson" method="post" role="form">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group" hidden>
        <div class="col-md-10">
            <input asp-for="Id" value="@Model.Id" class="form-control" />
        </div>
    </div>
    <div class="form-group" hidden>
        <div class="col-md-10">
            <input asp-for="IdGrouop" value="@Model.IdGrouop" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Name" class="col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="mt-2 col-md-10">
            <button type="submit" class="btn btn-success">Edit</button>
        </div>
    </div>
</form>