@using StudentCalendarAdmin.ViewModels;
@model LessonEditViewModel

<div class="row g-5">
    <div class="col-md-7 col-lg-8">
        <h4 class="mb-3">Edit  Lesson</h4>
        <form asp-controller="Lesson" asp-action="EditLesson" method="post" class="needs-validation" novalidate="">
            <div class="row g-3">
                <div class="form-group" hidden>
                    <div class="col-md-10">
                        <input asp-for="Id" value="@Model.Id" class="form-control" />
                    </div>
                </div>
                <div class="form-group" hidden>
                    <div class="col-md-10">
                        <input asp-for="IdGrouop" value="@Model.IdGrouop" class="form-control" />
                    </div>
                </div>
                <div class="col-sm-6">
                    <label asp-for="Name" class="form-label">Name Lesson</label>
                    <input asp-for="Name" type="text" class="form-control" id="Name" placeholder="" value="" required="">
                    <div class="invalid-feedback">
                        Valid first name is required.
                    </div>
                </div>                
                <hr class="my-4">

                <button class="w-100 btn btn-primary btn-lg" type="submit">Edit Lesson</button>
            </div>
        </form>
    </div>
</div>