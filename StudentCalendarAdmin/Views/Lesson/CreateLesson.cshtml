@using Models
@model Lesson

<div class="row g-5">
    <div class="col-md-7 col-lg-8">
        <h4 class="mb-3">Create Lesson</h4>
        <form asp-controller="Lesson" asp-action="CreateLesson" method="post" class="needs-validation" novalidate="">
            <div class="row g-3">
                <div class="col-sm-6">
                    <label asp-for="Name" class="form-label">Name Lesson</label>
                    <input asp-for="Name" type="text" class="form-control" id="Name" placeholder="" value="" required="">
                    <div class="invalid-feedback">
                        Valid first name is required.
                    </div>
                </div>
                <div class="form-group" hidden>
                    <label asp-for="DayOfWeek" class="col-md-2"></label>
                    <div class="col-md-10">
                        <input readonly value="@Model.DayOfWeek" asp-for="@Model.DayOfWeek" class="form-control" />
                    </div>
                </div>
                <div class="form-group" hidden>
                    <label asp-for="StartTime" class="col-md-2"></label>
                    <div class="col-md-10">
                        <input readonly value="@Model.StartTime" asp-for="@Model.StartTime" class="form-control" />
                    </div>
                </div>
                <div class="form-group" hidden>
                    <label asp-for="IdGroup" class="col-md-2"></label>
                    <div class="col-md-10">
                        <input readonly value="@Model.IdGroup" asp-for="@Model.IdGroup" class="form-control" />
                    </div>
                </div>
                <hr class="my-4">

                <button class="w-100 btn btn-primary btn-lg" type="submit">Create Lesson</button>
            </div>
        </form>
    </div>
</div>