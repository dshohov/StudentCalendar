@using Models
@model Lesson

<h1 class="text-info">Create Lesson</h1>
<form asp-controller="Lesson" asp-action="CreateLesson" method="post" role="form">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name" class="col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group" hidden>
        <label asp-for="DayOfWeek" class="col-md-2"></label>
        <div class="col-md-10">
            <input readonly value="@Model.DayOfWeek" asp-for="@Model.DayOfWeek" class="form-control" />
        </div>
    </div>
    <div class="form-group" hidden>
        <label asp-for="StartTime" class="col-md-2"></label>
        <div class="col-md-10">
            <input readonly value="@Model.StartTime" asp-for="@Model.StartTime" class="form-control" />
        </div>
    </div>
    <div class="form-group" hidden>
        <label asp-for="IdGroup" class="col-md-2"></label>
        <div class="col-md-10">
            <input readonly value="@Model.IdGroup" asp-for="@Model.IdGroup" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <div class="mt-2 col-md-10">
            <button type="submit" class="btn btn-success">Create</button>
        </div>
    </div>
</form>